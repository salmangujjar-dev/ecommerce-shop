{
  "name": "ecommerce-shop",
  "description": "E-Commerce Shop",
  "author": "Salman Ahmed<salmanahmed@gmail.com>",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=16.14.0",
    "yarn": ">=1.14.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --incremental false --noEmit --pretty",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "generate:svgr": "svgr --no-prettier --out-dir src/assets/svgs src/assets/svgs/src --typescript --ignore-existing --ref --jsx-runtime automatic --no-dimensions && prettier --write ./src/assets/svgs",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@prisma/client": "^6.7.0",
    "@tanstack/react-query": "^5.75.1",
    "@trpc/client": "^11.1.2",
    "@trpc/next": "^11.1.2",
    "@trpc/react-query": "^11.1.2",
    "@trpc/server": "^11.1.2",
    "clsx": "^2.1.1",
    "framer-motion": "^12.9.4",
    "lucide-react": "^0.503.0",
    "next": "15.3.1",
    "nprogress": "^0.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.2.0",
    "zod": "^3.24.3",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@storybook/addon-actions": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/nextjs": "^8.6.12",
    "@storybook/preview-api": "^8.6.12",
    "@storybook/theming": "^8.6.12",
    "@svgr/cli": "^8.1.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/nprogress": "^0.2.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@welldone-software/why-did-you-render": "^10.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "lint-staged": "^15.5.1",
    "prisma": "^6.7.0",
    "storybook": "^8.6.12",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "tsc -p tsconfig.json --noEmit",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css}": [
      "prettier --write"
    ]
  }
}
